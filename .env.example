# Crypto Trading Signal Verification System - Environment Variables
# Copy this file to .env and fill in your actual credentials

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_ENV=development  # Options: development, staging, production
APP_PORT=8000
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG=false

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DATABASE_URL=postgresql://crypto_user:crypto_password@localhost:5432/crypto_signals
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# ==============================================================================
# REDIS CACHE
# ==============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=50

# ==============================================================================
# TELEGRAM API (REQUIRED)
# ==============================================================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE_NUMBER=  # Format: +1234567890
TELEGRAM_SESSION_NAME=crypto_signals_bot
TELEGRAM_CHANNELS=  # Comma-separated list of channel usernames

# ==============================================================================
# LLM CONFIGURATION (REQUIRED - Choose one provider)
# ==============================================================================
LLM_PROVIDER=openai  # Options: openai, anthropic
LLM_MODEL=gpt-4-turbo-preview  # or claude-3-opus-20240229
LLM_API_KEY=
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# ==============================================================================
# EXCHANGE APIS (OPTIONAL - At least one recommended)
# ==============================================================================
# Binance API (Read-only permissions recommended)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# KuCoin API (Read-only permissions recommended)
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_API_PASSPHRASE=

# ==============================================================================
# VECTOR DATABASE
# ==============================================================================
VECTOR_DB_URL=http://localhost:6333
QDRANT_API_KEY=  # Only needed for cloud deployment
VECTOR_COLLECTION_NAME=signals

# ==============================================================================
# KAFKA MESSAGE QUEUE
# ==============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_SIGNALS=crypto-signals
KAFKA_TOPIC_VALIDATION=signal-validation
KAFKA_CONSUMER_GROUP=signal-processor

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
API_PREFIX=/api/v1
CORS_ORIGINS=*  # For production, specify actual origins
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_WEBSOCKET=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=false
ENABLE_NOTIFICATIONS=true

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
SIGNAL_PROCESSING_TIMEOUT=2
MAX_CONCURRENT_SIGNALS=10
CACHE_TTL_SECONDS=3600

# ==============================================================================
# MONITORING
# ==============================================================================
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=crypto-signals-api

# ==============================================================================
# OCR SERVICES (OPTIONAL - For image processing)
# ==============================================================================
# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=

# AWS Textract
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ==============================================================================
# SECURITY (PRODUCTION ONLY)
# ==============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
